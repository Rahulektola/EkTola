# =============================================================================
# EkTola - Environment Configuration Template
# =============================================================================
# Copy this file to .env and update with your actual values
# NEVER commit the .env file to version control!

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# PostgreSQL database connection URL
# Format: postgresql://username:password@host:port/database_name
DATABASE_URL=postgresql://username:password@localhost:5432/ektola_db

# -----------------------------------------------------------------------------
# JWT Authentication
# -----------------------------------------------------------------------------
# Secret key for JWT token generation (use a strong random string)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here-change-this

# JWT algorithm (recommended: HS256)
ALGORITHM=HS256

# Token expiration times
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# -----------------------------------------------------------------------------
# Redis Configuration
# -----------------------------------------------------------------------------
# Redis URL for Celery task queue and caching
REDIS_URL=redis://localhost:6379/0

# -----------------------------------------------------------------------------
# WhatsApp Cloud API Configuration
# -----------------------------------------------------------------------------
# WhatsApp Business API version
WHATSAPP_API_VERSION=v18.0

# WhatsApp Phone Number ID (from Meta Business Manager)
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id

# WhatsApp Access Token (from Meta Business Manager)
WHATSAPP_ACCESS_TOKEN=your-whatsapp-access-token

# WhatsApp template name for OTP messages
WHATSAPP_OTP_TEMPLATE_NAME=otp_verification

# -----------------------------------------------------------------------------
# Application Configuration
# -----------------------------------------------------------------------------
# Environment: development, staging, production
ENVIRONMENT=development

# Admin access code for admin registration
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(16).upper())"
ADMIN_ACCESS_CODE=your-admin-access-code-here

# -----------------------------------------------------------------------------
# Optional: Email Configuration (if implementing email OTP)
# -----------------------------------------------------------------------------
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-specific-password
# SMTP_FROM=noreply@ektola.com

# -----------------------------------------------------------------------------
# Optional: Logging & Monitoring
# -----------------------------------------------------------------------------
# LOG_LEVEL=INFO
# SENTRY_DSN=your-sentry-dsn
