{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ES2020",
    "moduleResolution": "bundler",
    "lib": ["DOM", "ES2019"],
    "rootDir": "./ts",
    "outDir": "./js",
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./ts/*.ts"],
  "exclude": ["./js", "./css"]
}
