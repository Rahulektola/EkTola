# =============================================================================
# EkTola WhatsApp Campaign Platform - Environment Configuration
# =============================================================================

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql://user:password@localhost:5432/ektola_db
# Production example: postgresql://username:password@host:port/database
# SQLite example (for development): sqlite:///./ektola.db

# -----------------------------------------------------------------------------
# Security & JWT Configuration
# -----------------------------------------------------------------------------
SECRET_KEY=your-secret-key-here-change-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# -----------------------------------------------------------------------------
# Admin Access
# -----------------------------------------------------------------------------
ADMIN_ACCESS_CODE=your-admin-access-code-here

# -----------------------------------------------------------------------------
# Redis Configuration (for Celery task queue)
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379/0
# Production example: redis://:password@host:port/0

# -----------------------------------------------------------------------------
# WhatsApp Cloud API Configuration
# -----------------------------------------------------------------------------
WHATSAPP_API_VERSION=v18.0
WHATSAPP_PHONE_NUMBER_ID=your-whatsapp-phone-number-id
WHATSAPP_ACCESS_TOKEN=your-whatsapp-business-api-access-token
WHATSAPP_OTP_TEMPLATE_NAME=otp_verification

# Get credentials from: https://developers.facebook.com/apps/
# 1. Create a Meta App (Business)
# 2. Add WhatsApp product
# 3. Get Phone Number ID from WhatsApp > API Setup
# 4. Generate Access Token with whatsapp_business_messaging permission

# -----------------------------------------------------------------------------
# Celery Configuration
# -----------------------------------------------------------------------------
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# -----------------------------------------------------------------------------
# Email Configuration (for OTP delivery if SMS not available)
# -----------------------------------------------------------------------------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@ektola.com
SMTP_FROM_NAME=EkTola

# -----------------------------------------------------------------------------
# CORS Configuration
# -----------------------------------------------------------------------------
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
# Production: https://yourdomain.com,https://www.yourdomain.com

# -----------------------------------------------------------------------------
# Application Configuration
# -----------------------------------------------------------------------------
ENVIRONMENT=development
# Options: development, staging, production

API_HOST=0.0.0.0
API_PORT=8000
DEBUG=True

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# -----------------------------------------------------------------------------
# File Upload Configuration
# -----------------------------------------------------------------------------
MAX_UPLOAD_SIZE_MB=10
ALLOWED_UPLOAD_EXTENSIONS=csv,xlsx,xls

# -----------------------------------------------------------------------------
# Rate Limiting (Optional - for production)
# -----------------------------------------------------------------------------
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_ENABLED=False

# -----------------------------------------------------------------------------
# Monitoring & Analytics (Optional)
# -----------------------------------------------------------------------------
SENTRY_DSN=
# Get from: https://sentry.io/

# -----------------------------------------------------------------------------
# Database Connection Pool (Optional - for production)
# -----------------------------------------------------------------------------
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600
